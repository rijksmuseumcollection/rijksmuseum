<section class="album-container">

    {{#each album}}
      
        <article class="single-album">
          <a href="../../../albums/showAlbum/{{_id}}" class="single-album-portada">
          <img src="/images/popino.jpg">
          </a>

          <p class="album-name">{{albumName}}</p>
          <p class="album-description">{{albumDescription}}</p>
        </article>
        

    {{/each}}
        <article class="single-album placeholder">
          <a href="/albums/create">
              <p>+</p>
          </a>
            <p class="album-name">CREATE</p>
          <p class="album-description">Test</p>
          

        </article>

      
    </section>